
<%= form_for @list do |f| %>

  <% if @list.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@list.errors.count, "error") %> 
        prohibited this list from being saved:
      </h2>
      <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name_list %><br>
    <%= f.text_field :name_list %><br>
  </p>

  <p>
    <%= f.submit :Save %>
  </p>
<% end %>

<%= link_to 'Back', lists_path %>