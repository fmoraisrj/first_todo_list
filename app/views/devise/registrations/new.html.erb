<div id="container-signup">  <h2>Sign up</h2>

   <%= form_for(resource, :as => resource_name, :url => user_registration_path, :html => { :class => "form-signin" }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.text_field :username, :autofocus => true, :placeholder => "Username" %>
    <%= f.email_field :email, :placeholder => "Email address" %>
    <%= f.password_field :password, :placeholder => "Password" %>
    <%= f.password_field :password_confirmation, :placeholder => "Confirmation password" %>
    
    <%= f.submit "Sign up", :class => "btn btn-large btn-primary" %>
  <% end %>
</div>
