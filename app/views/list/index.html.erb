 <h1>Listing lists</h1>



 <%= link_to "My lists"%> 
 <%= link_to '| New list', new_list_path %>

 <%- flash.each do |key, msg| -%>
  <div id="<%= key %>">
    <p style="float:right;"><%= link_to_function 'X', "Effect.Fade('#{key}')" %></p>
    <p><%= msg %></p>
    <div class="clear"></div>
  </div>
<%- end -%>


<table border = "2">
  <tr>
    <th>Name list</th>
    <th>item 1</th>
    <th>item 2</th>
    <th>item 3</th>
  </tr>
 
  <% @lists.each do |list| %>
    <tr>
      <td><%= list.name_list %></td>
      <td><%= list.item1 %></td>
      <td><%= list.item2 %></td>
      <td><%= list.item3 %></td>
      <td><%= link_to 'Show', list %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>

</table>
 

      